{% extends 'base.html.twig' %}
{% block title %}list categories {% endblock %}

{% block body %}

    <div class="container-fluid">
    <h3 class="text-dark mb-4">Categories</h3>
    <div class="card shadow">
        <div class="card-header py-3">
            <p class="text-primary m-0 fw-bold">List of categories</p>
        </div>
        <div class="card-body">
            <div class="row">
            </div>

            <div class="table-responsive table mt-2" id="dataTable" role="grid" aria-describedby="dataTable_info">
{#                <form action="{{ path('app_categories') }}" method="get">#}
{#                    <input type="text" name="search" value="{{ search_term }}" placeholder="Search...">#}
{#                    <button type="submit">Search</button>#}
{#                </form>#}
                <table class="table my-0" id="category_datatable">
                    <thead>
                    <tr>
                        <th>category name<a href="{{ path('app_categories', { 'sort_by': 'cat_name', 'sort_order': (sort_by == 'cat_name' and sort_order == 'asc') ? 'desc' : 'asc' }) }}"><i class="fa-solid fa-sort"></i> </a></th>
                        <th>description</th>
                        <th>added by</th>
                        <th>creation date<a href="{{ path('app_categories', { 'sort_by': 'created_at', 'sort_order': (sort_by == 'created_at' and sort_order == 'asc') ? 'desc' : 'asc' }) }}">           <i class="fa-solid fa-sort"></i> </a></th>
                        <th>update</th>
                        <th>remove</th>
                    </tr>
                    </thead>
                    <tbody>
                    {# loop through categories #}
                    {% if categories %}

                        {% for category in categories %}
                            <tr>
                                <td class="editable" data-field="catName">{{ category.catName}}</td>
                                <td class="editable" data-field="desc">{{ category.catDesc}} </td>
                                <td>{{ category.userId.username }}</td>
                                <td >{{ category.createdAt|date}} </td>
                                <td><button class="btn btn-warning updateBtn">update</button></td>
                                <td><a role="button" class="btn btn-danger" onclick="return confirm('are you sure??')" href={{ path('remove_category',{'catId':category.id()}) }} >remove</a></td>
                            </tr>
                        {% endfor %}

                    {% else %}

                    {% endif %}
                    </tbody>
                </table>
                <div class="navigation">
                    {{ knp_pagination_render(categories) }}
                </div>

            </div>
        </div>
    </div>
    </div>{% endblock %}