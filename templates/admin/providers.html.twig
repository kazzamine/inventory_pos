{% extends 'base.html.twig' %}
{% block title %}Providers {% endblock %}

{% block body %}
    <div class="container container-fluid">
        <h3 class="text-dark mb-4">Providers</h3>
        <div class="card shadow">
            <div class="card-header py-3">
                <p class="text-primary m-0 fw-bold">List of providers</p>
            </div>
            <div class="card-body" id="listModelContainer"  >
                <div class="row">
                </div>
                <div class="row">
                    <div class="form-group mb-3"><label class="form-label" for="providers">Providers</label>
                        <select class="form-select" id="providers" name="providers">
                            {% for provider in providers %}
                                <option value="{{ provider.id }}">
                                    {{ provider.providerName }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <br>
                <form>
                    <div class="row">
                            <div class="col-sm-6">
                                <div class="has-feedback form-group mb-3"><label class="form-label" for="provider_name">provider name</label>
                                    <input class="form-control" type="text" id="provider_name" name="provider_name"  required>
                                </div>
                            </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <button type="button" class="btn btn-outline-primary" id="btnUpdateProvider">update</button>
                        </div>
                    </div>
                </form>
            </div>
            </div>
        </div>
    <br>
    <div class="card shadow" id="addModelContainer" >
        <div class="card-header py-3">
            <p class="text-primary m-0 fw-bold">add new provider</p>
        </div>
        <div class="card-body">
        {{ form_start(form) }}
            <div class="row" id="addToggle">
                <div class="col-md-5">
                    <div id="successfail">
                        {{ form_errors(form) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 col-lg-12" id="message">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="has-feedback form-group mb-3">{{ form_row(form.providerName) }}</div>
                        </div>
                    </div>
                </div>
            </div>
        {{ form_end(form) }}
    </div>
    </div>
{% endblock %}